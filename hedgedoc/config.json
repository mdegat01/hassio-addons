{
  "name": "HedgeDoc",
  "url": "https://github.com/mdegat01/addon-hedgedoc",
  "version": "1.3.3",
  "slug": "hedgedoc",
  "arch": [
    "aarch64",
    "amd64",
    "armv7",
    "armhf",
    "i386"
  ],
  "description": "HedgeDoc for Home Assistant",
  "services": [
    "mysql:want"
  ],
  "map": [
    "ssl"
  ],
  "webui": "[PROTO:ssl]://[HOST]:[PORT:3000]",
  "watchdog": "[PROTO:ssl]://[HOST]:3000/status",
  "ports": {
    "3000/tcp": 3000
  },
  "ports_description": {
    "3000/tcp": "HTTP listen port"
  },
  "options": {
    "ssl": false,
    "access": {
      "domain": "homeassistant.local",
      "add_port": true,
      "session_secret": null,
      "session_days": 30
    },
    "csp_directives": [],
    "log_level": "info",
    "env_vars": []
  },
  "schema": {
    "ssl": "bool?",
    "certfile": "str?",
    "keyfile": "str?",
    "dhparamfile": "str?",
    "access": {
      "domain": "match([^\\/:]+)?",
      "use_ssl": "bool?",
      "add_port": "bool?",
      "session_secret": "password?",
      "session_days": "int(1,)?",
      "allow_email_registration": "bool?"
    },
    "csp_directives": [
      {
        "name": "str",
        "value": "str"
      }
    ],
    "remote_mysql_host": "str?",
    "remote_mysql_port": "port?",
    "remote_mysql_username": "str?",
    "remote_mysql_password": "password?",
    "remote_mysql_database": "str?",
    "reset_database": "bool?",
    "env_vars": [
      {
        "name": "match(^CMD_([A-Z0-9_])+$)",
        "value": "str"
      }
    ],
    "log_level": "list(trace|debug|info|notice|warning|error|fatal)?"
  },
  "image": "ghcr.io/mdegat01/hedgedoc/{arch}"
}